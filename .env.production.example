# === Production Environment Variables ===

# Required by Prisma
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# NextAuth
NEXTAUTH_URL=https://<your-vercel-project>.vercel.app
NEXTAUTH_SECRET=replace-with-strong-random-secret

# (Optional but recommended for Vercel/Auth.js setups)
AUTH_TRUST_HOST=true

# MercadoPago (Production keys)
MP_PUBLIC_KEY=REPLACE_ME
MP_ACCESS_TOKEN=REPLACE_ME
MP_WEBHOOK_SECRET=REPLACE_ME

# AWS S3 (if you use uploads)
AWS_BUCKET_NAME=REPLACE_ME
AWS_FOLDER_PREFIX=cocteleria-sabor-emilia/
AWS_ACCESS_KEY_ID=REPLACE_ME
AWS_SECRET_ACCESS_KEY=REPLACE_ME
AWS_REGION=us-east-1

# Email
CONTACT_EMAIL=contacto@tu-dominio.com
